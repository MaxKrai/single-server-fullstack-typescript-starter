{
  "name": "single-server-fullstack-typescript-starter",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "scripts": {
    "start": "npm run build && npm run server",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server": "cross-env NODE_ENV=production node dist/server/index.js",
    "server:dev": "nodemon --watch src/server --exec cross-env NODE_ENV=development ts-node src/server/index.ts",
    "client:dev": "webpack serve --config webpack.config.js --mode development",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc",
    "build:client": "webpack --config webpack.config.js --mode production"
  },
  "keywords": [],
  "author": "",
  "engines": {
    "node": "^20.x",
    "npm": "^10.x"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.22",
    "@types/node": "^22.15.23",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "html-webpack-plugin": "^5.6.3",
    "nodemon": "^3.1.10",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.1"
  }
}
